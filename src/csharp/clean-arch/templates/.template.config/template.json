{
    "$schema": "https://json.schemastore.org/template",
    "author": "Lucimarck J S Dias",
    "classifications": [
        "Common",
        "Library",
        "Web",
        "WebAPI"
    ],
    "identity": "System.Templates.Architectures.CleanArchitecture.CSharp",
    "groupIdentity": "System.Templates.Architectures.CleanArchitecture",
    "name": ".NET Clean Architecure Project",
    "shortName": "clean-arch",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "Project1",
    "preferNameDirectory": true,
    "symbols": {
        "includeDependencyInjection": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "displayName": "Include Dependency Injection project."
        },
        "includeSeedWork": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "displayName": "Include SeedWork Domain files."
        },
        "includePersistence": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "displayName": "Include Persistence layer files."
        },
        "includeTests": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "displayName": "Include Tests projects files."       
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        ".template.config/**/*",
                        "**/*.filelist",
                        "**/*.user",
                        "**/*.lock.json",
                        "Project1.Solution.sln"
                    ]
                },
                {
                    "condition": "(!includeDependencyInjection)",
                    "exclude": [
                        "Project1.Extensions.DependencyInjection/**/*"
                    ]
                },
                {
                    "condition": "(!includePersistence)",
                    "exclude": [
                        "Project1.Infrastructure.Persistence/**/*"
                    ]
                },
                {
                    "condition": "(!includeSeedWork)",
                    "exclude": [
                        "Project1.Domain/Common/**/*"
                    ]
                },
                {
                    "condition": "(!includeTests)",
                    "exclude": [
                        "Project1.UnitTests/**/*",
                        "Project1.FunctionalTests/**/*"
                    ]
                }
            ]
        }
    ]
}